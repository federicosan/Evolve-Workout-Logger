<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ExpandedAppBar" parent="AppTheme.Base">
        <item name="actionBarSize">@dimen/app_bar_height</item>
    </style>

    <style name="LargeDisplayText" parent="TextAppearance.AppCompat.Display1"/>
    <style name="MediumDisplayText">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.HintTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/accent_green</item>
    </style>

    <style name="SingleLineListText">
        <item name="android:textSize">@dimen/single_line_list_text_size</item>
        <item name="android:paddingRight">@dimen/single_line_list_lr_padding</item>
        <item name="android:paddingLeft">@dimen/single_line_list_lr_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="TwoLineListPrimaryText" parent="SingleLineListText"/>

    <style name="TwoLineListSecondaryText">
        <item name="android:textSize">@dimen/two_line_list_secondary_text_size</item>
        <item name="android:paddingLeft">@dimen/two_line_list_lr_padding</item>
        <item name="android:paddingRight">@dimen/two_line_list_lr_padding</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginLeft">@dimen/button_lr_margin</item>
        <item name="android:layout_marginRight">@dimen/button_lr_margin</item>
        <item name="android:layout_marginTop">@dimen/button_top_margin</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/light_shade_3</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="ColoredTitleHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/light_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EmptyRecyclerView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_and_border_2</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

</resources>
