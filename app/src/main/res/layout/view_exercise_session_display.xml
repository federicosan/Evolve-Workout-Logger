<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/single_line_list_height"
    android:background="@drawable/delete_swipe_view">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/removable">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/exercise_session_display_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/single_line_list_lr_padding"
            android:layout_centerVertical="true" />

        <ProgressBar
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_session_progressBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginRight="@dimen/single_line_list_lr_padding"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/exercise_session_finished_checkbox"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/checkmark_circle"
            android:layout_marginRight="@dimen/single_line_list_lr_padding"
            android:contentDescription="green check box"
            android:layout_centerVertical="true"/>

        <View style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</FrameLayout>