<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_card_routine_session_history_date"
            style="@style/ColoredTitleHeader"
            android:background="@color/accent_very_light_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"/>

        <TextView
            android:id="@+id/text_card_routine_session_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_card_routine_session_history"
            android:name="edu.umn.paull011.evolveworkoutlogger.fragments.RoutineHistoryFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context="edu.umn.paull011.evolveworkoutlogger.fragments.RoutineHistoryFragment" />
    </LinearLayout>
</android.support.v7.widget.CardView>