<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.umn.paull011.evolveworkoutlogger.fragments.ExerciseHistoryFragment">

    <TextView
        android:id="@+id/card_exercise_session_history_date"
        style="@style/ColoredTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_fragment_exercise_history_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_exercise_history"
        android:name="edu.umn.paull011.evolveworkoutlogger.fragments.ExerciseHistoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="edu.umn.paull011.evolveworkoutlogger.fragments.ExerciseHistoryFragment" />

    <TextView
        android:id="@+id/empty_view_exercise_history"
        style="@style/EmptyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_empty_view_exercise_history" />

</LinearLayout>


