<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_card_exercise_session_history_date"
            style="@style/ColoredTitleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_card_exercise_session_history"
            android:name="edu.umn.paull011.evolveworkoutlogger.fragments.ExerciseHistoryFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context="edu.umn.paull011.evolveworkoutlogger.fragments.ExerciseHistoryFragment" />

    </LinearLayout>
</android.support.v7.widget.CardView>